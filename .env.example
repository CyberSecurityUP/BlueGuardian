# BlueGuardian AI Configuration
# Copy this file to .env and fill in your values

# AI Provider API Keys
ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here
GOOGLE_API_KEY=your-gemini-key-here

# Threat Intelligence APIs
VIRUSTOTAL_API_KEY=your-vt-key-here
HYBRID_ANALYSIS_API_KEY=your-hybrid-analysis-key-here
OTX_API_KEY=your-otx-key-here

# SIEM Integration (Optional)
ENABLE_SIEM_INTEGRATION=false
SIEM_TYPE=splunk  # Options: splunk, elasticsearch, azure_sentinel, syslog
SPLUNK_HEC_TOKEN=your-splunk-token-here
SPLUNK_HEC_URL=https://your-splunk-server:8088
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=blueguardian-logs
AZURE_WORKSPACE_ID=your-workspace-id
AZURE_SHARED_KEY=your-shared-key
SYSLOG_HOST=localhost
SYSLOG_PORT=514
SYSLOG_PROTOCOL=udp  # udp or tcp

# AI Model Configuration
DEFAULT_AI_PROVIDER=claude  # Options: claude, openai, gemini, ollama
CLAUDE_MODEL=claude-sonnet-4.5-20250929
OPENAI_MODEL=gpt-4-turbo-preview
GEMINI_MODEL=gemini-1.5-pro
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# Consensus Configuration
ENABLE_MULTI_MODEL_CONSENSUS=true
CONSENSUS_MIN_AGREEMENT=0.7  # 70% agreement threshold
CONSENSUS_PROVIDERS=claude,openai  # Comma-separated list

# Hallucination Guard
HALLUCINATION_GUARD_ENABLED=true
MIN_CONFIDENCE_SCORE=0.6

# Analysis Configuration
MAX_FILE_SIZE_MB=100
ANALYSIS_TIMEOUT_SECONDS=300
ENABLE_DOCKER_SANDBOX=true
SANDBOX_NETWORK_ISOLATION=true

# Docker Configuration
DOCKER_SANDBOX_IMAGE=blueguardian-ai-sandbox:latest
DOCKER_MEMORY_LIMIT=512m
DOCKER_CPU_QUOTA=50000

# MCP Configuration
MCP_SERVER_ENABLED=true
MCP_SERVER_PORT=3000
GHIDRA_PATH=/opt/ghidra
IDA_PATH=/opt/ida
VOLATILITY_PATH=/usr/local/bin/vol.py

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
API_RATE_LIMIT=100  # requests per minute

# Database (optional - for job persistence)
# DATABASE_URL=postgresql://user:pass@localhost/blueguardian

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/blueguardian.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# Storage
ARTIFACTS_STORAGE_PATH=./storage/artifacts
REPORTS_STORAGE_PATH=./storage/reports
YARA_RULES_PATH=./data/yara_rules

# Plugin Configuration
PLUGINS_PATH=./plugins
ENABLE_GITHUB_PLUGINS=true
PLUGIN_AUTO_UPDATE=false

# Security
ENABLE_API_AUTH=true
API_SECRET_KEY=change-this-to-a-random-secret-key
SESSION_EXPIRE_MINUTES=60

# Features
ENABLE_WEB_UI=true
ENABLE_PHISHING_ANALYSIS=true
ENABLE_MEMORY_FORENSICS=true
ENABLE_DOCUMENT_ANALYSIS=true
ENABLE_MALWARE_ANALYSIS=true
ENABLE_NETWORK_ANALYSIS=true

# Development
DEBUG=false
DEVELOPMENT_MODE=false
